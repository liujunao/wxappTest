/* pages/chat/chat.wxss */
@import "/utils/weui.wxss";

page {
  height: 100%;
  position: fixed;
}

image {
  width: 240px;
}

.bottom-content {
  height: 90rpx;
  position: fixed;
  bottom: 0;
  padding-left: 30rpx;
  width: 100%;
}

.bottom-item {
  /* float:left; */
  width: 18%;
  height: 70rpx;
  border-radius: 20rpx;
}

.bottom-view {
  padding: 0 0 0 4rpx;
  font-size: 5rpx;
  line-height: 100rpx;
  justify-content: center;
  word-break: break-all;
  align-items: center;
  white-space: nowrap;
  text-align: center;
  position: absolute;
  color: black;
  width: 18%;
  bottom: 1%;
}

.bottom-contact {
  padding: 0 0 0 4rpx;
  font-size: 1rpx;
  line-height: 100rpx;
  justify-content: center;
  word-break: break-all;
  align-items: center;
  white-space: nowrap;
  text-align: center;
  position: absolute;
  color: black;
  width: 14%;
  bottom: 1%;
  opacity: 0;
}
/* //opacity: 0; */
.container {
  height: 100%;
  width: 750rpx;
  min-height: 97.6%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 15rpx 15rpx;
  background-color: #d9d9d9;
}

.chat-list {
  flex: 1;
  padding-bottom: 80rpx;
}

 .scrool-view {
  height: 950rpx;
  width: 750rpx;
  float: fixed;
}  

.chat-left {
  margin-top: 20rpx;
  width: 100%;
  float: right;
}

.chat-text-left {
  /* flex: 1; */
  margin-left: 100rpx;
  margin-right: 100rpx;
  /* padding: 5rpx 10rpx; */
  background-color: #a0e959;
  border-radius: 11rpx;
  /* word-break: break-all; */
  /* float: left; */
  margin-bottom: 10rpx;
  line-height: 35rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
}

.chat-right {
  /* display: flex; *//* align-items: center; */
  margin-top: 20rpx;
  float: right;
  width: 100%;
}

.request-img-wrapper {
  width: 240px;
  height: 240px;
  border-radius: 5px;
  float: right;
  margin-right: 45rpx;
}

.request-img {
  float: right;
  border-radius: 15%;
  width: 100%;
  height: 100%;
}

.chat-text-right {
  /* flex: 1; */
  margin-right: 45rpx;
  margin-left: 50rpx;
  padding: 10rpx 10rpx;
  background-color: #a0e959;
  border-radius: 11rpx;
  word-break: break-all;
  float: right;
  max-width: 70%;
  margin-bottom: 10rpx;
}

.avatar-img-left {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  float: left;
}

.avatar-img-right {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  float: right;
}

.text-video-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 60rpx;
  margin-right: 5px;
}

.camera-album {
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
  margin-right: 5px;
}

.ask-input-word {
  width: 96%;
  position: fixed;
  padding: 5rpx;
  bottom: 8%;
  display: flex;
  align-items: center;
}

.ask-input-word input {
  background: white;
  border-radius: 10rpx;
  flex: 1;
  margin-right: 10rpx;
  height: 2rem;
  min-height: 2rem;
}

.ask-input-word button {
  height: 2rem;
  min-height: 2rem;
  font-size: 18px;
  padding: 0 0.34em;
  width: 100%;
  text-align: center;
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  text-decoration: none;
  color: #fff;
  line-height: 2rem;
  border-radius: 5px;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow: hidden;
  background-color: #c1c1c1;
}

.button-hover {
  background-color: #ccc;
}

.button-send {
  background-color: red;
}

.pos-rel {
  position: relative;
}

.pos-abs {
  position: absolute;
}

.olami-info {
  font-size: 10px;
  align-items: right;
}

.speaker {
  position: fixed;
  left: 50%;
  top: 50%;
  margin-top: -50px;
  margin-left: -50px;
  width: 30%;
  height: 20%;
}

.showAuthor {
  display: inline-flex;
  flex-direction: row;
  justify-content: flex-end;
}

.author {
  text-align: right;
  margin-left: 19%;
}
